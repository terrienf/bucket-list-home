<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="icon" href="{{ asset('images/favicon.png') }}">



    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
        <div class="container">
            <p class="lead">Welcome to my BucketList</p>
            <div class="header-bar">
                <h1 class="logo"><img src=" {{ asset('images/logobucket.png') }}" alt="logo" width="85px"></h1>
                <ul class="slider-menu">
                    <li><a href="{{ path('main_index') }}">Home</a></li>
                    <li><a href="{{ path('main_aboutus') }}">About us</a></li>
                    <li><a href="{{ path('liste') }}">Liste</a></li>
                </ul>
            </div>
        </div>
    <hr>

</header>

{% block body %}{% endblock %}


</body>
{#<footer>{{ 'now' | date ('Y')}}</footer>#}
<footer>
    <div>
        <p>{{ 'now' | date ('Y')}} - Terrien</p>
    </div>

</html>
